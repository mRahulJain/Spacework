<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#1566e0"
        android:id="@+id/user_profile_screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/logo"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_width="70dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:text="Spacework"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowColor="@android:color/black"
            android:shadowRadius="10"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="14dp"
                android:textAllCaps="false"
                android:paddingBottom="14dp"
                android:id="@+id/activity_admin_orders"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="18.7dp"
                android:text="VIEW ORDERS"
                android:background="@drawable/blue_fill__rounded_color"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="14dp"
                android:textAllCaps="false"
                android:paddingBottom="14dp"
                android:id="@+id/activity_admin_addProduct"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="18.7dp"
                android:text="ADD PRODUCT"
                android:background="@drawable/blue_fill__rounded_color"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="14dp"
                android:textAllCaps="false"
                android:paddingBottom="14dp"
                android:id="@+id/activity_admin_updateProduct"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="18.7dp"
                android:text="UPDATE PRODUCT"
                android:background="@drawable/blue_fill__rounded_color"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>