<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    android:layout_weight="1"
    android:layout_margin="0.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/list_item_product_myProduct"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:id="@+id/list_item_product_productImage"
            android:layout_width="180dp"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/list_item_product_productName"
            android:text="Item name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/list_item_product_productDescription"
            android:text="Item description"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/list_item_product_productPrice"
                android:text="Item price"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/list_item_product_productAddToCard"
                android:src="@drawable/ic_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_item_product_isAvailable"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_tired"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="Not\nAvailable"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#407FDD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>