<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:layout_weight="1"
    android:layout_marginBottom="0.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="20dp"
        android:id="@+id/list_item_cart_myProduct"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:foregroundGravity="center"
            android:id="@+id/list_item_cart_productImage"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:gravity="left|center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:id="@+id/list_item_cart_productName"
                    android:text="Product name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Rs. 1199"
                    android:textSize="22sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:id="@+id/list_item_cart_productPriceTotal"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="x1"
                        android:id="@+id/list_item_cart_itemCount"
                        android:layout_gravity="center"
                        android:background="#C0D6F7"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>