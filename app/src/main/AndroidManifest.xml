<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.spacework">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.user.ProfileActivity"></activity>
        <activity android:name=".activity.login.UserDetailsActivity" />
        <activity android:name=".activity.admin.DeleteProductActivity" />
        <activity android:name=".activity.admin.UpdateProductActivity" />
        <activity android:name=".activity.admin.AddProductActivity" />
        <activity android:name=".activity.admin.AdminActivity" />
        <activity android:name=".activity.user.AppActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.login.OtpActivity" />
        <activity android:name=".activity.login.LoginActivity" />
    </application>

</manifest>